# ============================================
# AI & OCR Services
# ============================================

# Google Gemini API (NEW - Primary multi-modal OCR)
# Get key from: https://aistudio.google.com/app/apikey
# Used for: Image classification and OCR (business cards, trucks, storefronts, ads)
# Cost: ~$0.0011 per image (10x cheaper than OpenAI)
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (Fallback OCR + AI summaries)
# Used as fallback if Gemini fails, and for generating summaries
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# Supabase Configuration
# ============================================

NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ============================================
# Enrichment Services
# ============================================

# SerpApi (NEW - PRIORITY: Google My Business reviews and photos)
# Get key from: https://serpapi.com/
# Used for: Comprehensive GMB data (detailed reviews, business photos, ratings)
# Cost: ~$0.01 per lookup
# Speed: 3-5 seconds
# THIS IS THE FIRST DATA SHOWN TO USERS - Most important!
SERPAPI_API_KEY=your_serpapi_api_key_here

# Perplexity AI (Deep company research)
# Get key from: https://www.perplexity.ai/settings/api
# Used for: Comprehensive company data (size, revenue, funding, executives, etc.)
# Cost: ~$0.015 per query
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Serper API (Google search - LinkedIn, company info, news, social profiles)
# Get key from: https://serper.dev/
# Used for: LinkedIn profiles, company websites, news, social media
# Cost: ~$0.0003 per query
SERPER_API_KEY=your_serper_api_key_here

# Google Places API (Optional fallback - basic ratings only)
# Get key from: https://console.cloud.google.com/
# Used for: Basic business ratings if SerpApi unavailable
# Cost: ~$0.034 per lookup
# NOTE: SerpApi provides much better data - use that instead
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Apollo.io API (Premium email/phone enrichment)
# Get key from: https://app.apollo.io/#/settings/integrations/api
# Used for: Finding email addresses and phone numbers for contacts
# Strategy: Selective - only called when contact is missing email OR phone
# Cost: ~$0.10-0.50 per successful enrichment
APOLLO_API_KEY=your_apollo_api_key_here

# ============================================
# Stripe Configuration
# ============================================

NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Subscription Price IDs
# Get from Stripe Dashboard after creating products/prices
STRIPE_GROWTH_PRICE_ID=price_growth_xxx  # Growth Plan ($29/month, 30 enrichments)
STRIPE_PRO_PRICE_ID=price_pro_xxx  # Pro Plan ($79/month, 120 enrichments)

# Credit Package Price IDs (one-time payments)
STRIPE_CREDITS_10_PRICE_ID=price_credits_10_xxx  # 10 credits for $15
STRIPE_CREDITS_50_PRICE_ID=price_credits_50_xxx  # 50 credits for $50
STRIPE_CREDITS_100_PRICE_ID=price_credits_100_xxx  # 100 credits for $90

# ============================================
# Email Service (Contact Form)
# ============================================

# Resend API Key (for contact form emails)
# Get key from: https://resend.com/api-keys
# Used for: Sending contact form submissions to your inbox
RESEND_API_KEY=re_xxxxxxxxxxxx

# ============================================
# Security & Integrations
# ============================================

# Encryption Secret (REQUIRED for GoHighLevel integration)
# Used to encrypt API keys stored in the database
# Generate with: openssl rand -base64 32
# MUST be at least 32 characters long
ENCRYPTION_SECRET_KEY=your-secret-key-minimum-32-characters-long
